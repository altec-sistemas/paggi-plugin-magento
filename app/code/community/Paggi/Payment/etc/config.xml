<config>
    <modules>
        <Paggi_Payment>
            <version>1.0.0</version>
        </Paggi_Payment>
    </modules>

    <global>
        <models>
            <paggi>
                <class>Paggi_Payment_Model</class>
                <resourceModel>paggi_resource</resourceModel>
            </paggi>
            <paggi_resource>
                <class>Paggi_Payment_Model_Resource</class>
                <entities>
                    <transaction>
                        <table>paggi_transactions</table>
                    </transaction>
                    <card>
                        <table>paggi_credit_cards</table>
                    </card>
                </entities>
            </paggi_resource>
        </models>

        <resources>
            <paggi_setup>
                <setup>
                    <module>Paggi_Payment</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </paggi_setup>
            <paggi_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </paggi_write>
            <paggi_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </paggi_read>
        </resources>

        <blocks>
            <paggi>
                <class>Paggi_Payment_Block</class>
            </paggi>
        </blocks>

        <helpers>
            <paggi>
                <class>Paggi_Payment_Helper</class>
            </paggi>
        </helpers>

        <events>
            <sales_order_payment_capture>
                <observers>
                    <paggi_capture>
                        <type>singleton</type>
                        <class>paggi/observer</class>
                        <method>salesOrderPaymentCapture</method>
                    </paggi_capture>
                </observers>
            </sales_order_payment_capture>
            <sales_order_payment_cancel>
                <observers>
                    <paggi_cancel>
                        <type>singleton</type>
                        <class>paggi/observer</class>
                        <method>salesOrderPaymentCancel</method>
                    </paggi_cancel>
                </observers>
            </sales_order_payment_cancel>
            <sales_order_payment_place_end>
                <observers>
                    <paggi_payment_place_end>
                        <type>singleton</type>
                        <class>paggi/observer</class>
                        <method>salesOrderPaymentPlaceEnd</method>
                    </paggi_payment_place_end>
                </observers>
            </sales_order_payment_place_end>
            <!--<sales_order_place_after>-->
                <!--<observers>-->
                    <!--<paggi_sales_order_place_after>-->
                        <!--<type>singleton</type>-->
                        <!--<class>paggi/observer</class>-->
                        <!--<method>salesOrderPlaceAfter</method>-->
                    <!--</paggi_sales_order_place_after>-->
                <!--</observers>-->
            <!--</sales_order_place_after>-->
        </events>

        <sales>
            <quote>
                <totals>
                    <interest>
                        <class>paggi/total_quote_interest</class>
                        <after>grand_total</after>
                    </interest>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <interest>
                        <class>paggi/total_invoice_interest</class>
                    </interest>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <interest>
                        <class>paggi/total_creditmemo_interest</class>
                    </interest>
                </totals>
            </order_creditmemo>
        </sales>
        <pdf>
            <totals>
                <interest translate="title">
                    <title>Interest</title>
                    <source_field>interest_amount</source_field>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>202</sort_order>
                </interest>
            </totals>
        </pdf>

        <fieldsets>
            <sales_convert_quote_address>
                <interest_amount>
                    <to_order>*</to_order>
                </interest_amount>
                <base_interest_amount>
                    <to_order>*</to_order>
                </base_interest_amount>
            </sales_convert_quote_address>

            <sales_convert_order>
                <interest_amount>
                    <to_invoice>*</to_invoice>
                    <to_shipment>*</to_shipment>
                </interest_amount>
                <base_interest_amount>
                    <to_invoice>*</to_invoice>
                    <to_shipment>*</to_shipment>
                </base_interest_amount>
            </sales_convert_order>
        </fieldsets>
    </global>


    <frontend>
        <secure_url>
            <paggi>/paggi/</paggi>
        </secure_url>
        <routers>
            <paggi>
                <use>standard</use>
                <args>
                    <module>Paggi_Payment</module>
                    <frontName>paggi</frontName>
                </args>
            </paggi>
        </routers>
        <translate>
            <modules>
                <paggi>
                    <files>
                        <default>Paggi_Payment.csv</default>
                    </files>
                </paggi>
            </modules>
        </translate>
        <layout>
            <updates>
                <paggipaggi>
                    <file>paggi.xml</file>
                </paggipaggi>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <paggi>
                    <files>
                        <default>Paggi_Payment.csv</default>
                    </files>
                </paggi>
            </modules>
        </translate>
        <layout>
            <updates>
                <paggi>
                    <file>paggi.xml</file>
                </paggi>
            </updates>
        </layout>
    </adminhtml>

    <admin>
        <routers>
            <paggi_admin>
                <use>admin</use>
                <args>
                    <module>Paggi_Payment_Adminhtml</module>
                    <frontName>paggi_admin</frontName>
                </args>
            </paggi_admin>
        </routers>
    </admin>

    <default>
        <paggi>
            <endpoints>
                <order>partners/{{partner_id}}/orders</order>
                <capture>partners/{{partner_id}}/orders/{{order_id}}/capture</capture>
                <void>partners/{{partner_id}}/orders/{{order_id}}/void</void>
                <cards>partners/{{partner_id}}/cards</cards>
                <remove_cards>partners/{{partner_id}}/cards/{{card_id}}</remove_cards>
                <plans>partners/{{partner_id}}/plans</plans>
            </endpoints>
        </paggi>
        <payment>
            <paggi_settings>
                <api_url>https://api.paggi.com/v1/</api_url>
                <sandbox_url>https://api.stg.paggi.com/v1/</sandbox_url>
                <show_taxvat_field>1</show_taxvat_field>
                <cpf_customer_attribute>taxvat</cpf_customer_attribute>
                <cnpj_customer_attribute>taxvat</cnpj_customer_attribute>
                <stop_processing>1</stop_processing>
                <cron_time>0 1 * * *</cron_time>
            </paggi_settings>
            <paggi_cc>
                <active>0</active>
                <model>Paggi_Payment_Model_Method_Cc</model>
                <title>Paggi - Cartão de Crédito</title>
                <payment_action>order</payment_action>
                <order_status>pending</order_status>
                <authorized_order_status>processing</authorized_order_status>
                <captured_order_status>processing</captured_order_status>
                <stop_processing>1</stop_processing>
                <max_installments>1</max_installments>
            </paggi_cc>
        </payment>
    </default>

    <crontab>
        <jobs>
            <paggi_query_payments>
                <schedule>
                    <config_path>payment/paggi_settings/cron_time</config_path>
                </schedule>
                <run>
                    <model>paggi/cron::queryPayments</model>
                </run>
            </paggi_query_payments>
        </jobs>
    </crontab>

</config>
